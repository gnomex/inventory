<%= form_for @category do |f| %>
<section class="form-group">
  <i class="glyphicon glyphicon-asterisk"></i>
  <%= f.label t("flash.categories.form.name"), class: 'form-label' %>
  <%= f.text_field :name, class: 'form-control', placeholder: t("flash.categories.form.name")%>
  <%= error_for @category, :name %>
</section>

<section class="form-actions">
  <%= f.submit t("flash.categories.form.actions.submit"), class: 'btn btn-success' %>
  <%= link_to t("flash.categories.form.actions.cancel"), categories_path, class: 'btn btn-warning' %>
</section>
<% end %>
