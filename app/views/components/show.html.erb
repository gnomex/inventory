<section class="bs-callout bs-callout-info">
<h3><%= t("flash.components.title") %></h3>
<span class="label label-default"><%= @component.id %></span>
<section class="row-fluid">
  <ul class="li st-group">
    <li class="list-group-item"><%= @component.part_number %></li >
    <li class="list-group-item"><%= @component.stock %></li >
    <li class="list-group-item"><%= @component.description %></li >
    <li class="list-group-item"><%= @component.datasheet %></li >
  </ul>
</section>

<%= link_to t("flash.components.form.actions.delete"), component_path(@component), method: :delete, data: {confirm: t("flash.components.form.actions.confirm")}, class: "btn btn-danger" %>
<%= link_to t("flash.components.form.actions.cancel"), components_path, class: 'btn btn-warning' %>

</section>
