<section class="bs-callout bs-callout-info">
<h3><%= t("flash.components.title") %></h3>
<span class="label label-default"><%= @component.id %></span>
<section class="row-fluid">
  <ul class="li st-group">
    <li class="list-group-item"><%= @component.name %></li >
    <li class="list-group-item"><%= @component.model %></li >
    <li class="list-group-item"><%= @component.stock %></li >
    <li class="list-group-item"><%= @component.description %></li >
    <li class="list-group-item"><%= @component.datasheet %></li >
    <li class="list-group-item">
      <% if @component.category.nil? %>
        <span class="label label-default">
          <i class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></i>
          <%= t("flash.components.form.categories.nothing") %>
        </span>
      <% else %>
        <%= @component.category.name %>
      <% end %>
    </li>
    <li class="list-group-item">
      <% if @component.toolbox.nil? %>
        <span class="label label-default">
          <i class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></i>
          <%= t("flash.components.form.toolboxes.nothing") %>
        </span>
      <% else %>
        <%= @component.toolbox.name %>
      <% end %>
    </li>
  </ul>
</section>

<%= link_to t("flash.components.form.actions.delete"), component_path(@component), method: :delete, data: {confirm: t("flash.components.form.actions.confirm")}, class: "btn btn-danger" %>
<%= link_to t("flash.components.form.actions.edit"), edit_component_path(@component), class: "btn btn-info" %>
<%= link_to t("flash.components.form.actions.back"), components_path, class: 'btn btn-warning' %>

</section>
